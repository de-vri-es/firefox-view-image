	"description": "Minimal open source add-on to restore the \"View image\" context menu item.",
	"developer": {
		"name": "Maarten de Vries",
		"url": "https://github.com/de-vri-es/firefox-view-image"
	},

	"permissions": ["menus"],
	"default_locale": "en",
	"background": {
		"scripts": ["view_image.js"]
	}
}
